@model IEnumerable<Candidate>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Aday Bilgileri</h2>
        </div>       
        <div class="col-6 text-end">
            <a asp-controller="Candidate" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Bilgi Girişi</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Telefon Numarası</th>
            <th>Adres</th>
            <th>İl</th>
            <th>İlçe</th>
            <th>Cinsiyet</th>
            <th>Yetenekler</th>
            <th>Hobiler</th>
            <th>Kişilik Testi Sonucu</th>
            <th>Adayın Adı</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            
            <tr> 

                <td>@obj.CandidateId</td>
                <td>@obj.PhoneNumber</td>
                <td>@obj.AddressLine</td>
                <td>@obj.City</td>
                <td>@obj.Province</td>
                <td>@obj.Gender</td>
                <td>@obj.Skills</td>
                <td>@obj.Hobbies</td>
                <td>@obj.PersonalityTest</td> 
                <td>

                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@obj.CandidateId" class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i>  Edit</a>
                </div>
                    </td>

            </tr>

            
        }
    </tbody>
</table>

