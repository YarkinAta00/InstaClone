@model Candidate

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Bilgi Düzenle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="UserId">Kullanıcı ID</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div> 
        <div class="mb-3">
            <label asp-for="PhoneNumber">Telefon Numarası</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AddressLine">Adresi</label>
            <input asp-for="AddressLine" class="form-control" />
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City">İl</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>

        </div>        
        <div class="mb-3">
            <label asp-for="Province">İlçe</label>
            <input asp-for="Province" class="form-control" />
            <span asp-validation-for="Province" class="text-danger"></span>

        </div>        
        <div class="mb-3">
            <label asp-for="Gender">Cinsiyet</label>
            <input asp-for="Gender" class="form-control" />

        </div>        
        <div class="mb-3">
            <label asp-for="Skills">Yetenekler</label>
            <input asp-for="Skills" class="form-control" />

        </div>        
        <div class="mb-3">
            <label asp-for="Hobbies">Hobileri</label>
            <input asp-for="Hobbies" class="form-control" />

        </div>        
        <div class="mb-3">
            <label asp-for="PersonalityTest">Kişilik Testi Sonucu</label>
            <input asp-for="PersonalityTest" class="form-control" />

        </div>       
        <button type="submit" class="btn btn-primary" style="width:150px">Düzenle</button>
        <a asp-controller="Candidate" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Geri Dön
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}