    }
    #info{
        color:slategrey;
        text-align:start;
        font-size:20px;
        font-weight:800;
        font-family:'Century Gothic';
    } 

    #cardPhoto{

        background-color:#F5F6FA; 
        border-radius:25px;
        margin-right:25px;
        margin-top:25px;
