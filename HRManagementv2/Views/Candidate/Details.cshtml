<h1><i class="bi bi-calendar-plus"></i> @Model.CreatedDate.Day.@Model.CreatedDate.Month.@Model.CreatedDate.Year
</h1>
</div>

        <link rel=stylesheet href="~/css/CandInfo.css" type="text/css">

      

<div class="container mt-3">

  <div class="row">
