@model CandidateInf

@{
    ViewData["Title"] = "Details";
}


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Bootstrap 5 Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="~/css/blueTheme.css" rel="stylesheet">
        

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
        <style>
            i{
            color:purple;
            }
            #info{
            color:slategrey;
            text-align:center;
            font-size:1vw;
            font-weight:800;
            font-family:'Century Gothic';
            margin-top:10px;
            }
            #nameInfo{
            color:black;
            text-align:start;
            font-size:25px;
            font-weight:1000;
            font-family:'Century Gothic';
            margin-left:25px;
            }
            #card{
            background-color:white; 
            align-items:left;
            border-radius:25px;
            margin-right:25px;
            margin-top:25px;
            justify-content:left;
            height: 400px;
            }
            #cardBottom{

            background-color:white; 
            align-items:left;
            border-radius:25px;
            margin-right:25px;
            margin-top:25px;
            width:80%;
            justify-content:left;
            }
            .center {
            display: block;
            margin-left: 500px;
            margin-right: auto;
            margin-bottom: 10px;
            width: 50%;
;           text-align:center;
            }

            body{
             color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;    
            }
            .main-body {
                padding: 15px;
            }
            .card {
                box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0,0,0,.125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 1px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
                margin-bottom: 10px;
            }

            .gutters-sm>.col, .gutters-sm>[class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
                
            }
            .mb-3, .my-3 {
                margin-bottom: 1rem!important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }
            .h-100 {
                height: 100%!important;
            }
            .shadow-none {
                box-shadow: none!important;
            }
            #buttons{
            border:none;
            outline:none;
            text-align: center;
            line-height: 20px;
            font-size:19px;
            margin-top: 20px;
            margin-left: 120px;
            }
            #renkliButon {
                border-radius: 50%!important;
                padding: 0.60rem 0.60rem!important;
            }
        </style>
        

    </head>
    <body style="background:#f5f6fa;">

        <div class="container">
            <div class="main-body">
                 <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src="@Url.Content("~/media/photo/" + @Model.Photo)" alt="Profil Resmi" width="110" height="120 class="center" style="margin-top:30px; border-radius:60px; margin-left:18px">
                        <div class="mt-3">
                          <p id="nameInfo">@Model.FirstName @Model.LastName
                           @if (@Model.Gender == "Erkek") {
                            <i class="bi bi-gender-male" style="font-size:20px; color:black"></i>
                            }
                            else{
                            <i class="bi bi-gender-female" style="font-size:20px; color:black"></i>
                                 }
                          </p>
                          <p id="info" class="text-secondary mb-1">@Model.JobTitle</p>
                          <p id="info" class="text-muted font-size-sm">@Model.City</p>
                          <i class="bi bi-calendar-plus-fill" style="font-size:20px; margin-left: 40px"></i>
                          <a id="info">@Model.CreatedDate.Day.@Model.CreatedDate.Month.@Model.CreatedDate.Year</a>
                          <div> 
                                    @if (@Model.AppStatus == "On Hold")
                                    {
                                        <p id="info">@Model.AppStatus
                                        <button type="button" class="btn btn-success btn-circle" id="renkliButon"></button></p>
                                    }
                                    else
                                    {
                                        <p id="info">@Model.AppStatus
                                        <button type="button" class="btn btn-danger btn-circle" id=renkliButon></button></p>
                                    }
                                </div>
                            </div>
                    </div>
                    </div>
                    </div>

                  <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <h6 class="mb-0 text-dark"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                        <span class="text-secondary">yasincan</span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <h6 class="mb-0 text-dark"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>Phone</h6>
                        <span class="text-secondary">@Model.PhoneNumber</span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <h6 class="mb-0 text-dark"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><path d="M22 6 L12 13 L2 6"/></svg>Mail</h6>
                        <span class="text-secondary">@Model.Email</span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                        <h6 class="mb-0 text-dark"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><path d="M13 2 L13 9 L20 9"/></svg>Cv</h6>
                        <span class="text-secondary"><a href="@Url.Content("~/media/resume/" + @Model.Resume)" target="_blank">Görüntüle</a></span>
                      </li>
                    </ul>
                  </div>
                  <div class="col text-center" id="buttons">
                       <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@Model.CandidateId" class="btn btn-primary edit mb-3 w-25">Edit</a>
                      <a asp-controller="Candidate" asp-action="Index" class="btn btn-outline-primary mb-3 w-40">Geri Dön</a>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">Şehir</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          @Model.City
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">Adres</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          @Model.AddressLine
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">Dil</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          @Model.LanguageName
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">Dil Seviyesi</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                                    @if (@Model.LanguageLevel != 0)
                                    {
                                        @Model.LanguageLevel
                                    }
                                    <i class="fa fa-star rating-color"></i>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">Kişilik Testi Sonucu</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          @Model.PersonalityTest
                        </div>
                      </div>
                      <hr />
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0 text-dark">İlgi alanı</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          @Model.Hobbies
                        </div>
                      </div> 
                    </div>
                  </div>

                  <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-primary mr-2">Yetenekler</i></h6>
                          <small>@Model.Skills</small>
                          <div class="progress mb-3" style="height: 5px">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                   
                    <div class="card col-sm-6 mb-3">
                        <div class="card-body h-100">
                            <h6 class="d-flex align-items-center mb-2"><i class="material-icons text-primary mr-2">Başvuru Bilgileri</i></h6>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0 text-dark">Başvuru Tarihi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.AppCreatedDate
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-4">
                              <h6 class="mb-0 text-dark">Departman</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                              @Model.Department
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-4">
                              <h6 class="mb-0 text-dark">Bizi nereden buldunuz?</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                              @if (@Model.FoundFrom != null)
                                    {
                                       @Model.FoundFrom
                                    }
                            </div>
                          </div>
                        </div>

                  </div>
                   <div class="col-sm-12 mb-3">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-primary mr-2">Mülakat Notları</i></h6>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0 text-dark"></h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              @Model.Assessment
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

    </div>
    </div>
    </div>
    
   


</body>
</html>
