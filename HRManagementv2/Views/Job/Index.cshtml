@model IEnumerable<Job>
@{
    ViewData["Title"] = "Index";
}


    <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Mevcut İş İlanları</h2>
        </div>       
        <div class="col-6 text-end">
            <a asp-controller="Job" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp İş İlanı Girişi</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>İşin İsmi</th>
            <th>Departmanı</th>
            <th>Konumu</th>
            <th>Oluşturulma Tarihi</th>
            <th>İlanın Bitiş Tarihi</th>
            <th>İşin Tanımı</th>
            <th>İş İlanının Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr> 

                <td>@obj.JobId</td>
                <td>@obj.JobTitle</td>
                <td>@obj.Department</td>
                <td>@obj.Location</td>
                <td>@obj.CreatedDate</td>
                <td>@obj.EndDate</td>
                <td>@obj.Description</td>


                @if (@obj.IsActive== true)
                {
                    <td>Yayında</td>
                }
                else{ <td>Yayında Değil</td> }
            </tr>
        }
    </tbody>
</table>




